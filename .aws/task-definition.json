{
    "family": "mi-fatality-task",
    "containerDefinitions": [
      {
        "name": "fastapi-container",
        "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/mi_fatality_prediction:latest",  // ECR image URL
        "memory": 512,  // Memory in MiB
        "cpu": 256,     // CPU units
        "essential": true,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp"
          }
        ],
        "environment": [
          {
            "name": "ENV",
            "value": "production"  // Set any required environment variables
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/mi-fatality-logs",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "fastapi"
          }
        }
      }
    ],
    "networkMode": "awsvpc",  // Use Fargate-specific network mode
    "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",  // Task execution role ARN (can be left blank for no role)
    "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole"  // Execution role ARN
  }
  